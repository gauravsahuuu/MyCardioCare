{
  "version": 2,
  "name": "Heart Disease Prediction App",
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "build": {
    "env": {
      "PIP_NO_CACHE_DIR": "false",
      "PIP_DISABLE_PIP_VERSION_CHECK": "1",
      "PIP_DEFAULT_TIMEOUT": "100"
    },
    "commands": [
      "pip install --upgrade pip",
      "pip install -r requirements.txt"
    ]
  }
}
